config PPC_MPC512x
	bool
	select FSL_SOC
	select IPIC
	default n

config PPC_MPC5121
	bool
	select PPC_MPC512x
	select USB_ARCH_HAS_EHCI
	select USB_EHCI_BIG_ENDIAN_DESC
	select PPC_INDIRECT_PCI
	default n

config MPC5121_ADS_CPLD
	bool
	depends on MPC5121_ADS

config MPC5121_ADS
	bool "Freescale MPC5121E ADS"
	depends on PPC_MULTIPLATFORM && PPC32
	select DEFAULT_UIMAGE
	select WANT_DEVICE_TREE
	select PPC_MPC5121
	select MPC5121_ADS_CPLD if (PCI || TOUCHSCREEN_ADS7846)
	help
	  This option enables support for the MPC5121E ADS board.
	default n

config MPC5121_PM_TEST
	bool "Lowlevel test for Freescale MPC5121E Power Management"
	depends on PM && !CAN_MPC52XX
	---help---
	  Say yes here to enable low level powermanagement test code.
	  It uses the MSCAN modules so the 5121 MSCAN driver must
	  be turned off.
